<UserControl x:Class="VisualMutator.Views.MutationResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ViewModels="clr-namespace:VisualMutator.ViewModels"
             xmlns:Converters="clr-namespace:VisualMutator.Views.Converters"
             xmlns:Controllers="clr-namespace:VisualMutator.Controllers"
             xmlns:Views="clr-namespace:VisualMutator.Views" mc:Ignorable="d" 
             d:DesignHeight="488" d:DesignWidth="393">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Global.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="Rectangle" x:Key="MutationStateRectangleStyleForListView">
                <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                AncestorType={x:Type ListViewItem}}, Path=DataContext.ResultState,
                Converter={Converters:MutantResultStateToFillConverter}}"/>
            </Style>
            <Style TargetType="Rectangle" x:Key="MutationStateRectangleStyle">
                <Setter Property="Height" Value="10"/>
                <Setter Property="Width" Value="10"/>
                <Setter Property="Margin" Value="0,0,5,0"/>
                <Setter Property="Stroke" Value="Black"/>
                <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                AncestorType={x:Type TreeViewItem}}, Path=DataContext.State,
                Converter={Converters:MutantResultStateToFillConverter}}"/>
            </Style>
            
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid d:DataContext="{d:DesignInstance ViewModels:MutationResultsViewModel}" 
          Visibility="{Binding IsVisible, Converter={Converters:BoolToVisibilityConverter}}">

        <Grid.Resources>
           
            
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition  Height="Auto"/>
            <RowDefinition  />
            <RowDefinition Height="5" />
            <RowDefinition />
        </Grid.RowDefinitions>



        <Grid Grid.Row="0">

            <Grid.RowDefinitions>
                <RowDefinition  />
                <RowDefinition  />
                <RowDefinition />
            </Grid.RowDefinitions>

            
            <Button Grid.Row="0" Content="Create new mutants" Command="{Binding CommandCreateNewMutants}"/>

            <DockPanel Grid.Row="1">
                <TextBlock HorizontalAlignment="Stretch" Text="{Binding OperationsStateDescription}" />
                <Button Content="Stop all operations" Command="{Binding CommandStop}"/>     
            </DockPanel>

            <ProgressBar Height="25" Grid.Row="2"  
                         Visibility="{Binding AreOperationsOngoing, 
                                Converter={Converters:BoolToVisibilityConverter}}" 
                         IsIndeterminate="{Binding RelativeSource={RelativeSource Self}, Path=Value,
                                Converter={Converters:ZeroToTrueConverter}}"
                         Value="{Binding TestingProgress}"/>


        </Grid>



        <TreeView Grid.Row="1" ItemsSource="{Binding Operators}" SelectedItemChanged="TreeView_SelectedItemChanged">

            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type Controllers:ExecutedOperator}"
                                    ItemsSource="{Binding Children}">
                    <DockPanel>
                        <Rectangle Style="{StaticResource MutationStateRectangleStyle}"/>

                        <TextBlock Text="{Binding Name}"/>
                    </DockPanel>
                </HierarchicalDataTemplate>

                <DataTemplate DataType="{x:Type Controllers:Mutant}">
                    <DockPanel>
                        <Rectangle Style="{StaticResource MutationStateRectangleStyle}"/>
                        <TextBlock Text="{Binding Name}"/>
                    </DockPanel>
                </DataTemplate>


            </TreeView.Resources>

        
        </TreeView>


